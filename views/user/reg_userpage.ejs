<!DOCTYPE html>
<html lang="en">
<%- include ("../partials/head.ejs") %>

    <body>
        <div class="container-fluid full-height">


            <div class="col-4 leftimage-col">

                <img src="/images/accountsImages/UsersIcon.png" alt="icon">
            </div>
            <div class="col-8 rightSide-col">
                <h2>Sign Up</h2>
                <% if(typeof errorMessage !=='undefined' && errorMessage.length> 0){ %>
                  
                            <% errorMessages.forEach(function(message) { %>
                                <li>
                                    <%= message %>
                                </li>
                                <% }); %>
                   
                 <% } %>
                        <div id="registerSection">
                            <form action="/user/reg_userpage" method="post">

                                <!--Register a new user-->
                                <label for="firstName">First Name: </label>
                                <input type="text" name="firstName" placeholder="First Name" class="form-control" required>
                                <label for="lastName">Last Name: </label>
                                <input type="text" name="lastName" placeholder="Last Name" class="form-control" required>
                                <label for="emailAddress">Email: </label>
                                <input type="email" name="emailAddress" placeholder="Email" class="form-control" required> 
                                <label for="contactNumber">Contact Number: </label>
                                <input type="text" name="contactNumber" placeholder="Contact Number" class="form-control"required>
                                <label for="dateOfBirth">Date of Birth: </label>
                                <input type="date" name="dateOfBirth" placeholder="Date of Birth" class="form-control" required> 
                                <label for="address">Address: </label>
                                <input type="text" name="address" placeholder="Address" class="form-control" required>
                               
                                <!--label for="paymentType">Payment method type</label>
                        <select name="paymentType" class="paymentType">
                            <option value="card">Card </option>
                            <option value="bank">Bank </option>
                            <option value="revoult">Revoult </option>
                        </select><br-->
                                <label for="username">Username:</label>
                                <input type="text" name="username" placeholder="Username" class="form-control" required>
                                <label for="password">Password:</label>
                                <input type="password" name="password" placeholder="Password" class="form-control" required>
                                <br>

                                <br>
                                <button type="submit">Register Pet </button>
                            </form>


                            <a href="/user/user_loginpage">Login</a>

                        </div>
                        <br>
                        <a href="/user/reg_petpage">Pet Register</a>
            </div>



            <!--Footer-->
            <%- include("../partials/footer.ejs") %>

        </div>
    </body>

</html>