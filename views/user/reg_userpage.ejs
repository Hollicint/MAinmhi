<!DOCTYPE html>
<html lang="en">
    <!--head-->
<%- include ("../partials/head.ejs") %>

<body>
    <div class="container-fluid conatainer3-mainBody full-height">
         
            <div class="col-4 leftimage-col ">
                 <img src="/images/accountsImages/UsersIcon.png"   class="userLoginIcon"alt="icon">
            </div>
            <div class="col-8 rightSide-col ">
                 <h2>Sign Up</h2>
              
                <div id="registerSection">
                    <form action="/user/reg_userpage" class="form-inline" method="post">
                        <div class="row userRegForm"> 
                             <!--Register a new user-->
                             <div class="form-group mx-sm-3 mb-2"><label for="firstName">First Name: </label> 
                                <input type="text" name="firstName"  value="<%= values?.firstName || '' %>" required></div>
                             <div class="form-group mx-sm-3 mb-2"><label for="lastName">Last Name: </label>
                                <input type="text" name="lastName" value="<%= values?.lastName || '' %>" required></div>
                                
                             <div class="form-group mx-sm-3 mb-2"><label for="emailAddress">Email: </label>
                                <input type="email" name="emailAddress" value="<%= values?.emailAddress || '' %>" required> 
                                <% if(errorMessage?.emailAddress){ %>
                                    <span class="errorMessageLogin"><%= errorMessage.emailAddress %></span>
                                <% } %>
                            </div>

                             <div class="form-group mx-sm-3 mb-2"><label for="contactNumber">Contact Number: </label>
                                 <input type="text" name="contactNumber" value="<%= values?.contactNumber || '' %>"  required></div>
                             <div class="form-group mx-sm-3 mb-2"><label for="dateOfBirth">Date of Birth: </label>
                                 <input type="date" name="dateOfBirth" value="<%= values?.dateOfBirth || '' %>" required> </div>
                             <div class="form-group mx-sm-3 mb-2"><label for="address">Address: </label>
                                <input type="text" name="address" value="<%= values?.address || '' %>" required></div>      

                             <div class="form-group mx-sm-3 mb-2"><label for="username">Username:</label>
                                <input type="text" name="username" value="<%= values?.username || '' %>"   required>
                                 <% if(errorMessage?.username){ %>
                                    <span class="errorMessageLogin"><%= errorMessage.username %></span>
                                <% } %>
                            </div>
                                
                             <div class="form-group mx-sm-3 mb-2"><label for="password">Password:</label> 
                                <input type="password" name="password"  required>   
                                <small id="passwordHelpInline" class="text-muted"> Must be 8-14 characters long. </small>
                                <% if(errorMessage?.password){ %>
                                    <span class="errorMessageLogin"><%= errorMessage.password %></span>
                                <% } %>
                                
                            </div>

                             
                             <!--class="form-control"-->
                              <div> <br><br><button type="submit">Register Pet </button></div>
                         </div>
                    </form>

                    <div>
                        <a href="/user/user_loginpage"><h3>Login</h3></a>    
                        <a href="/user/reg_petpage"><h3>Pet Register</h3></a>
                    </div>
                </div>
                <br><br>
            </div>
     </div>    
    <!--Footer-->
    <%- include("../partials/footer.ejs") %>
</body>
</html>