                    <input type="text" name="dateOfBirth"  placeholder="Pets DOB" class="displayBox" required> <br>

                    <label for="microchipping">Microchipping</label>
                    <select name="microchipping" class="microchipping">
                        <option value="yes">Yes </option>
                        <option value="no">No </option>
                    </select>
                    <br>
                    <label for="microchippingNum">Microchipping Number</label>
                    <input type="text" name="microchippingNum"  placeholder="Microchipping Number" class="displayBox" required> <br>
                    <label for="policyNum">Policy Number</label>
                    <input type="text" name="policyNum"  placeholder="Policy Number" class="displayBox" required> <br>
                
                    <!--Submit button-->
                    <button type="submit">Enter </button>
     
               </form>
