<!DOCTYPE html>
<html lang="en">
<!--head-->
<%- include ("../partials/head.ejs") %>

<body>
    <div class="container-fluid conatainer3-mainBody full-height">
        <div class="col-4 leftimage-col ">
                <img src="/images/accountsImages/UsersIcon.png" class="userLoginIcon" alt="icon">
        </div>
        <div class="col-8 rightSide-col ">
           <div> <h3>Pet Account Registration</h3> <br>
          </div>

            <form action="/user/reg_petpage" method="post">
                  <div class="row userLoginForm">  
                     <!--User and Password that will be checked if exists-->
                     <div><label for="petName">Pets Name</label>
                     <input type="text" name="petName" placeholder="Pets Name"  required></div>
                
                     <div> <label for="petType">Type of Pet </label>
                     <select name="petType" >
                         <option value="blank"> </option>
                         <option value="dog">Dog </option>
                         <option value="cat">Cat </option>
                         <option value="hamster">Hamster </option>
                         <option value="bird">Bird </option>
                         <option value="horse">Horse </option>
                         <option value="snake">Snake </option>
                         <option value="lizard">Lizard </option>
                         <option value="fish">Fish </option>

                     </select></div>
                     <div><label for="breed">Pets breed</label>
                     <input type="text" name="breed" placeholder="Pets Breed"  required></div>

                     <div><label for="gender">Gender</label>
                     <select name="gender" >
                          <option value="blank"> </option>
                         <option value="felmale">Female </option>
                         <option value="male">Male </option>
                     </select></div>

                     <div><label for="colour">Pets Colour</label>
                     <input type="text" name="colour" placeholder="Pets Colour"  required></div>

                     <div><label for="dateOfBirth">Pets DOB</label>
                     <input type="date" name="dateOfBirth"  placeholder="Pets DOB"  required> </div>

                     <div><label for="microchipping">Microchipping</label>
                     <select name="microchipping" >
                         <option value="blank"> </option>
                         <option value="yes">Yes </option>
                         <option value="no">No </option>
                     </select></div>
                     <div><label for="microchippingNum">Microchipping Number</label>
                     <input type="text" name="microchippingNum"  placeholder="Microchipping Number"  required> </div>
                
                     <div><label for="policyNum">Policy Number</label>
                     <input type="text" name="policyNum"  placeholder="Policy Number"  required> </div>
                
                     <div><label for="insuranceCompanyName">insurance Company Name</label>
                     <input type="text" name="insuranceCompanyName"  placeholder="insuranceCompanyName"  required> </div>
                     <br> <br>
                     <!--Submit button-->
                    <div> <button type="submit">Enter </button></div>
                </div>     
            </form>                

               
        </div>  
    </div>
    <!--Footer-->
    <%- include("../partials/footer.ejs") %>
 </body>
</html>