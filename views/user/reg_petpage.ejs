            <div class="col-8 rightSide-col">
                <h3>Pet Account Registration</h3> <br>

                <form action="" method="post">
                    <!--User and Password that will be checked if exists-->
                    <label for="petName">Pets Name</label>
                    <input type="text" name="petName" placeholder="Pets Name" class="displayBox" required> <br>
                    <label for="breed">Pets breed</label>
                    <input type="text" name="breed" placeholder="Pets Breed" class="displayBox" required> <br>
